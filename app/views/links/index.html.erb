
<h1>New Link</h1>
<%= bootstrap_form_for :link do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :url %>
  <%= f.submit 'Submit', class: 'btn btn-primary'%>
<% end %>
<br>

<div class="well">
  <h3 class="text-center">Links</h3>
  <% current_user.links.each do |link| %>
  <ul>
    <li>
      <% if link.read %>
        <h5><s><%= link.url %></s></h5>
        <%= link_to 'Mark as Unread', edit_link_path(link), class: 'btn btn-success' %>
      <% else %>
        <h5><%= link.url %></h5>
        <%= link_to 'Mark as Read', edit_link_path(link), class: 'btn btn-danger' %>
      <% end %>
    </li>
  </ul>
<% end %>
</div>
